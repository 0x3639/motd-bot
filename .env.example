# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHANNEL_ID=@your_channel_name_or_chat_id

# Scheduling (24-hour format)
# Example: 5 AM Central Time
DAILY_POST_HOUR=5
DAILY_POST_MINUTE=0
TIMEZONE=America/Chicago

# Testing Mode (set to true to disable actual Telegram posting)
DRY_RUN=false

# Database
DATABASE_PATH=motd.db

# Similarity threshold for uniqueness (0-1, default 0.85)
# Higher = stricter uniqueness check. 0.85 means reject if >85% similar
SIMILARITY_THRESHOLD=0.85

# Maximum generation attempts (default 5)
# If all attempts exceed threshold, uses the least similar message
MAX_GENERATION_ATTEMPTS=5

# Days of history to check for similarity (default 90)
# Lower = faster, higher = stricter over longer period
SIMILARITY_CHECK_DAYS=90
